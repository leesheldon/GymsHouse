@model GymsHouse.Models.Holidays

@{
    ViewData["Title"] = "Delete Holiday";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <h2 class="text-info">Delete Holiday</h2>
    <br />
    @using (Html.BeginForm(method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(m => m.ID)
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Holiday">Holiday:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Holiday, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @disabled = "disabled", @type = "Date" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="CenterId">Center:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Center.Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    }
</div>
