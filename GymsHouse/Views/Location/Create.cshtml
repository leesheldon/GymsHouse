@model GymsHouse.Models.GymsCentersViewModels.LocationAndCenterViewModel
@using GymsHouse.Extensions

@{
    ViewData["Title"] = "Create Location";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <h2 class="text-info">Create Location</h2>
    <br />
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <hr />
    @using (Html.BeginForm(method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Location.Name">Name:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Location.Name, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Location.CenterId">Center:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Location.CenterId, Model.CenterList.ToSelectListItem(Model.Location.CenterId), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Location.CenterId, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" for="Location.Picture_1">Picture 1:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location.Picture_1, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Location.Picture_1, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 2:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location.Picture_2, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Location.Picture_2, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 3:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location.Picture_3, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Location.Picture_3, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 4:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location.Picture_4, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Location.Picture_4, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
