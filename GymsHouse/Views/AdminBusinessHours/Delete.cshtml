@model GymsHouse.Models.BusinessHours

@{
    ViewData["Title"] = "Delete Business Hours";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <h2 class="text-info">Delete Business Hours</h2>
    <br />
    @using (Html.BeginForm(method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        <div class="form-group row">
            <label class="control-label col-sm-2" for="DaysOfWeek">Days Of Week:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.DaysOfWeek, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="From">From:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.From, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="To">To:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.To, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="CenterId">Center:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Center.Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="IsClosed">Is Closed:</label>
            <div class="col-sm-10">
                @Html.CheckBoxFor(m => m.IsClosed, htmlAttributes: new { @class = "form-control", @disabled = "disabled", @style = "width: 20px; height: 20px;" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    }

</div>

