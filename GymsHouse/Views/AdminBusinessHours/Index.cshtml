@model IEnumerable<GymsHouse.Models.BusinessHours>

@{
    ViewData["Title"] = "Business Hours List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h2 class="text-info">Business Hours List</h2>
    <p>
        @Html.Partial("_CreateButtonPartial")
    </p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="info">
                <th>Days Of Week</th>
                <th>From</th>
                <th>To</th>
                <th>Center</th>
                <th>Is Closed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DaysOfWeek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Center.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsClosed)
                </td>
                @Html.Partial("_TableButtonPartial", item.ID)
            </tr>
            }
        </tbody>
    </table>

</div>

