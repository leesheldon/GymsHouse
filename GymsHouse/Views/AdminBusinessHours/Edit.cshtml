@model GymsHouse.Models.GymsCentersViewModels.BusinessHoursAndCenterViewModel
@using GymsHouse.Extensions

@{
    ViewData["Title"] = "Edit Business Hours";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <h2 class="text-info">Edit Business Hours</h2>
    <br />
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <hr />
    @using (Html.BeginForm(method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        @Html.TextBoxFor(m => m.BusinessHours.ID, htmlAttributes: new { @class = "form-control", @type = "hidden" })
        <div class="form-group row">
            <label class="control-label col-sm-2" for="BusinessHours.DaysOfWeek">Days Of Week:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.BusinessHours.DaysOfWeek, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BusinessHours.DaysOfWeek, null, htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <label class="control-label" style="color: blue;">(Ex: Monday, Tuesday,...)</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="BusinessHours.From">From:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.BusinessHours.From, htmlAttributes: new { @class = "form-control", @MaxLength = "8" })
                @Html.ValidationMessageFor(m => m.BusinessHours.From, null, htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <label class="control-label" style="color: blue;">(Ex: 07:00 AM)</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="BusinessHours.To">To:</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.BusinessHours.To, htmlAttributes: new { @class = "form-control", @MaxLength = "8" })
                @Html.ValidationMessageFor(m => m.BusinessHours.To, null, htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <label class="control-label" style="color: blue;">(Ex: 10:00 PM)</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Location.CenterId">Center:</label>
            <div class="col-sm-7">
                @Html.DropDownListFor(m => m.BusinessHours.CenterId, Model.CenterList.ToSelectListItem(Model.BusinessHours.CenterId), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BusinessHours.CenterId, null, htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="BusinessHours.IsClosed">Is Closed:</label>
            <div class="col-sm-10">
                @Html.CheckBoxFor(m => m.BusinessHours.IsClosed, htmlAttributes: new { @class = "form-control", @style = "width: 20px; height: 20px;" })
                @Html.ValidationMessageFor(m => m.BusinessHours.IsClosed, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
