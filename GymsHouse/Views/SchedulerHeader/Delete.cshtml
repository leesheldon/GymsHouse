@model GymsHouse.Models.ScheduleHeader

@{
    ViewData["Title"] = "Delete Schedule Header";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <h2 class="text-info">Delete Schedule Header</h2>
    @Html.Partial("_StatusMessage", ViewData["ErrMessage"])
    <br />

    @using (Html.BeginForm(method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(m => m.ID, htmlAttributes: new { @class = "form-control" })
        <div class="form-group row">
            @Html.LabelFor(x => Model.TrainingClass.ID, "Training Class:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.TrainingClass.Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => Model.Instructor.Name, "Instructor:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Instructor.Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => Model.Location.Center.Name, "Center:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Location.Center.Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => Model.Location.Name, "Location:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.Location.Name, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => Model.StartDate, "Start Date:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @disabled = "disabled", @type = "Date" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => Model.EndDate, "End Date:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @disabled = "disabled", @type = "Date" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>

        <div class="form-group row">
            @Html.Label("", "Days of Training:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.DaysOfTraining, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => Model.ClassSize, "Class Size:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.ClassSize, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => Model.Status, "Status:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextBoxFor(m => m.StatusText, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => Model.Notes, "Notes:", htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-7">
                @Html.TextAreaFor(m => m.Notes, htmlAttributes: new { @class = "form-control", @disabled = "disabled", @style = "height: 100px;" })
            </div>
            <div class="col-sm-3">
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    }
</div>



