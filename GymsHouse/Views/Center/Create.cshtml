@model GymsHouse.Models.Center

@{
    ViewData["Title"] = "Create New Center";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2 class="text-info">Create New Center</h2>
    <br />
    @using (Html.BeginForm(method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Name">Name:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Address">Address:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Address, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="PhoneNumber">Phone Number:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Email">Email:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 1:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Picture_1, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Picture_1, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 2:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Picture_2, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Picture_2, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 3:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Picture_3, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Picture_3, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-2" for="Picture_1">Picture 4:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Picture_4, htmlAttributes: new { @class = "form-control", @type = "file", multiple = "multiple" })
                @Html.ValidationMessageFor(m => m.Picture_4, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    }
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

