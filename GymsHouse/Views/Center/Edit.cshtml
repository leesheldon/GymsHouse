@model GymsHouse.Models.Center

@{
    ViewData["Title"] = "Edit Center";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h2 class="text-info">Edit Center</h2>
    <br />
    <form method="post" enctype="multipart/form-data" asp-action="Edit">
        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Address" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="PhoneNumber" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Email" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Picture_1" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" multiple name="picture_1" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Picture_2" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" multiple name="picture_2" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Picture_3" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" multiple name="picture_3" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Picture_4" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" multiple name="picture_4" class="form-control" />
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />&nbsp;
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

