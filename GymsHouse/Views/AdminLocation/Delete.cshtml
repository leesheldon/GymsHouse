@model GymsHouse.Models.Location

@{
    ViewData["Title"] = "Delete Location";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <h2 class="text-info">Delete Location</h2>
    <br />

    <form asp-action="Delete">
        <div class="form-horizontal row">
            <div class="col-md-8">
                <field-set disabled>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Name" class="custom-label"></label>
                        </div>
                        <div class="col-4">
                            <input asp-for="Name" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Center.Name" class="custom-label"></label>
                        </div>
                        <div class="col-4">
                            <input asp-for="Center.Name" disabled class="form-control" />
                        </div>
                    </div>                    
                </field-set>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <img src="@Model.Picture_1"
                     style="border-radius: 5px; border: 1px solid #bbb9b9; width: 100%;" />
            </div>

        </div>
        <br />
        <div class="container row">
            <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>

</div>


